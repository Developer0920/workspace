package java0419_statement;
/*
 * 10 + 5 = 15
 * 10 - 5 = 5
 * 10 * 5 = 50
 * 10 / 5 = 2
 */
public class Java027_switch {

	public static void main(String[] args) {
		char ope = '+';
		int numX = 10;
		int numY = 5;
		int res = 0;
		
		switch(ope) {
		case '+' :
			res = 15; break;
		case '-' :
			res = 5; break;
		case '*' :
			res = 50; break;
		case '/' :
			res = 2; break;
		}
		
		System.out.printf("%d %c %d = %d\n" , numX, ope, numY, res);
		
		
		/*사고과정
		 * 
		 */
	}

}
