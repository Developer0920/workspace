package java0429_static_access.part08;

public class Time {
	private int hour;
	private int minute;
	private int second;
	
	public Time() {
		
	}
	//setter method//
	public void setHour(int hour) {
		this.hour=hour;
	}
	//getter method//
	public int getHour() {
		return hour;
	}
	
	public void setMinute(int minute) {
		this.minute=minute;
	}
	
	public int getMinute() {
		return minute;
	}
	
	public void setSecond(int second) {
		this.second=second;
	}
	
	public int getSecond() {
		return second;
	}
	//사용자가 딱 맞는 자료를 입력하도록 유도할 때 사용!
} //end class
