package java0419_statement;
/*각 월의 마지막일
 * 1 3 5 7 8 10 12 => 31
 * 4 6 9 11 => 30
 * 2 => 28
 * 
 * [출력결과]
 * 4월의 마지막 일은 30입니다.
 */
public class Java023_if {

	public static void main(String[] args) {
		int month = 4; //월
		
		//지역변수는 기본값을 제공하지 않는다.
		int lastDay = -1 ; //마지막 일
		
		if(month==2) {
			System.out.printf("%d월의 마지막 일은 28일입니다.\n", month);
						
		} else if(month==4 || month==6 || month==9 || month==11) {
			System.out.printf("%d월의 마지막 일은 30일입니다.\n", month);
		} else {
			System.out.printf("%d월의 마지막 일은 31일입니다.\n", month);
		}
		
	} //end main()

} //end class
