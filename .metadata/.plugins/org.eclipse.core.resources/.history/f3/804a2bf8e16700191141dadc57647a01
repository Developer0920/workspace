package java0426_class.part06;
/*
 * [출력결과]
 * 기업은행 42523-52325 100000
 * 하나은행 52253-22623 153000
 * 신한은행 16239-95235 256000
 * 총납입액:509000
 * 
 */
public class Java078_class {

	public static void main(String[] args) {
	//여기 구현
	
	//일단 클래스 배열 세팅
	CreditCard[] account = new CreditCard[3];
	account[0] = new CreditCard("기업은행", "42523-52325", 100000);
	account[1] = new CreditCard("하나은행", "52253-22623", 153000);
	account[2] = new CreditCard("신한은행", "16239-95235", 256000);
	
	account[1].prn();
	account[2].prn();
	account[3].prn();
	
	System.out.println("총납입금액:" + totalPrice(account));		
	
	}//end main()
	
	//총납입액을 구하는 메소드
	public static int totalPrice(CreditCard[] account) {
		int sum = 0;
		for(int i=0; i<account.length; i++) {
			sum = sum + account[i].pay;			
		}
		return sum;
	}//end total()
		
	
	


}//end class
